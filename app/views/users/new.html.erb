<h4 class="ui center aligned medium icon header">
  <i class="circular user icon"></i>
  Sign Up
</h4>

<div class="ui placeholder segment">
  <div class='ui form'>
    <%= form_for(@user, :html=>{class:"form-horizontal",role: "form"}) do |f| %>
      <div class="field">
        <%= f.label :username, placeholder: "Username" %>
        <div class="ui left icon input">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true%>
          <i class="user icon"></i>
        </div>
      </div>

      <div class="field">
        <%= f.label :password %>
        <div class="ui left icon input">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password"%>
          <i class="lock icon"></i>
        </div>
      </div>
      <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class:"ui red submit button" )%>
    <% end %>
  </div>
</div>
